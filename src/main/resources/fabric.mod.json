{
  "schemaVersion": 1,
  "id": "final-minecraft",
  "version": "${version}",

  "name": "Final Minecraft Core",
  "description": "Core API for the Final Minecraft mod set.",
  "authors": [
    "Lafolie"
  ],
  "contributors": [
    "Linguardium"
  ],
  "contact": {
    "homepage": "https://fabricmc.net/",
    "sources": "https://github.com/Lafolie/FMC",
    "issues": "https://github.com/Lafolie/FMC/issues"
  },

  "license": "GPL-3.0-only",
  "icon": "assets/fmccore/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "lafolie.fmc.core.Mod"
    ],
    "client": [
      "lafolie.fmc.core.ModClient"
    ],
    "cardinal-components": [
      "lafolie.fmc.core.internal.Components"
    ],
    "modmenu": [
      "lafolie.fmc.core.config.ConfigMenu"
    ]
  },
  "mixins": [
    "modid.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.13.3",
    "fabric": "*",
    "minecraft": "~1.18.2",
    "java": ">=17",
    "cloth-config": ">=6.2.62"
  },
  "suggests": {
    "another-mod": "*",
    "modmenu": "*"
  },

  "custom": {
    "cardinal-components": [
      "final-minecraft:elemental_stats"
    ],

    "modmenu": {
      "links": {
        "modmenu.discord": "https://discord.gg/Kv6umW2vzy"
      }
    }
  }
}
